@model List<MvcCV.Models.Entity.Tbliletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <!-- /.col -->
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="tab-pane" id="timeline">
                    <!-- The timeline -->
                    <div class="timeline timeline-inverse">
                        @foreach (var item in Model)
                        {
                            <!-- timeline time label -->
                            <div class="time-label">
                                <span class="bg-info">
                                    @(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))
                                </span>
                            </div>

                            <!-- timeline item -->
                            <div>
                                <i class="fas fa-comments bg-warning"></i>
                                <div class="timeline-item">
                                    <span class="time"><i class="far fa-clock"></i>@item.Mail</span>
                                    <h3 class="timeline-header"><a href="#">@item.Kimden</a> @item.Konu</h3>
                                    <div class="timeline-body">
                                        @item.Mesaj
                                    </div>
                                </div>
                            </div>
                            <!-- END timeline item -->
                        }

                    </div>
                </div>
            </div>
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
    </div>
    <!-- /.nav-tabs-custom -->
</div>
<!-- /.col -->
