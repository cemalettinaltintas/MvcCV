@model List<MvcCV.Models.Entity.TblSertifikalarim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ 
    int sayac = 1;
}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">
                            <!-- /.tab-pane -->
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {
                                        if (sayac % 2 == 0)
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-success">
                                                    <span class="bg-success">
                                                        @item.Tarih
                                                    </span>
                                                </a>
                                            </div>
                                            <div>
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @item.Aciklama
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="time-label">
                                                <a href="/Sertifika/SertifikaGetir/@item.ID" class="btn btn-primary">
                                                    <span class="bg-primary">
                                                        @item.Tarih
                                                    </span>
                                                </a>
                                            </div>
                                            <div>
                                                <div class="timeline-item">
                                                    <div class="timeline-body">
                                                        @item.Aciklama
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                        sayac++;
                                    }
                                </div>
                                <a href="/Sertifika/YeniSertifika" class="btn btn-info">Yeni Sertifika Girişi</a>
                            </div>
                        </div>
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</body>
</html>
